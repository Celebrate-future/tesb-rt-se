<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" default-activation="eager">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="job/list">
            <action class="org.talend.esb.job.command.ListJobsCommand">
                <property name="controller" ref="controller"/>
            </action>
        </command>

        <command name="route/list">
            <action class="org.talend.esb.job.command.ListRoutesCommand">
                <property name="controller" ref="controller"/>
            </action>
        </command>
    </command-bundle>

    <reference id="controller" interface="org.talend.esb.job.controller.Controller"/>

</blueprint>
