        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.jaxen/${jaxen.bundle.version}</bundle>
        <bundle>mvn:org.apache.servicemix.specs/org.apache.servicemix.specs.saaj-api-1.3/${servicemix.specs.version}</bundle>
        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.saaj-impl/${saaj-impl.bundle.version}</bundle>
    </feature>

    <feature name="talend-job-console" version="${project.version}" resolver="(obr)">
        <feature>talend-job-controller</feature>
        <feature>war</feature>
        <bundle>mvn:commons-io/commons-io/2.0.1</bundle>
        <bundle>mvn:commons-fileupload/commons-fileupload/1.2.2</bundle>
        <bundle>mvn:org.talend.esb.job/org.talend.esb.job.console/${project.version}</bundle>
    </feature>

