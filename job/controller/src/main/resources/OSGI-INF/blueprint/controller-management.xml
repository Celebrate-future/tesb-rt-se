<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" default-activation="eager">

    <!--reference interface="org.talend.esb.job.controller.Controller" id="controller"/-->

    <reference id="mbeanServer" interface="javax.management.MBeanServer">
        <reference-listener ref="mbeanRegister" bind-method="registerMBeanServer" unbind-method="unregisterMBeanServer" />
    </reference>

    <bean id="mbeanJob" class="org.talend.esb.job.controller.internal.management.JobControllerMBeanImpl">
        <property name="controller" ref="controller" />
    </bean>
    <bean id="mbeanRoute" class="org.talend.esb.job.controller.internal.management.RouteControllerMBeanImpl">
        <property name="controller" ref="controller" />
    </bean>
    <bean id="mbeanService" class="org.talend.esb.job.controller.internal.management.ServiceControllerMBeanImpl">
        <property name="controller" ref="controller" />
    </bean>

    <bean id="mbeanRegister" class="org.apache.karaf.management.MBeanRegistrer">
        <property name="mbeans">
            <map>
                <entry value="org.talend.esb:type=controller,name=job"
                    key-ref="mbeanJob" />
                <entry value="org.talend.esb:type=controller,name=route"
                    key-ref="mbeanRoute" />
                <entry value="org.talend.esb:type=controller,name=service"
                    key-ref="mbeanService" />
            </map>
        </property>
    </bean>

</blueprint>
