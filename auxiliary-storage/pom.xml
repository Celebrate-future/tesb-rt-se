            <id>apache-snapshots</id>
            <url>http://repository.apache.org/snapshots</url>
            <name>Apache Snapshots Repo</name>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

