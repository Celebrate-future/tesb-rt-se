<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb.examples.rent-a-car</groupId>
    <artifactId>app-reservation</artifactId>
    <name>App Reservation Basic</name>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.esb.examples.rent-a-car</groupId>
        <artifactId>app</artifactId>
        <version>4.2</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.talend.esb.examples.rent-a-car</groupId>
            <artifactId>crmservice-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talend.esb.examples.rent-a-car</groupId>
            <artifactId>crmservice-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talend.esb.examples.rent-a-car</groupId>
            <artifactId>reservationservice-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.talend.esb.examples.rent-a-car</groupId>
            <artifactId>reservationservice-client</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Import-Package>org.apache.felix.service.command,*</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>

