<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">
    <!-- repository>mvn:org.talend.esb/features/${project.version}/xml</repository -->
    <feature name='tesb-rac-common' version='${project.version}'>
        <feature>cxf</feature>
        <feature>tesb-sam-agent</feature>
        <bundle>mvn:${project.groupId}/crmservice-common/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/reservationservice-common/${project.version}</bundle>
		<bundle>mvn:org.apache.geronimo.specs/geronimo-servlet_2.5_spec/1.1.2</bundle>
		<bundle>mvn:org.apache.geronimo.specs/geronimo-el_1.0_spec/1.0.1</bundle>
		<bundle>mvn:org.apache.geronimo.specs/geronimo-jsp_2.1_spec/1.0.1</bundle>
		<bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.commons-beanutils/1.7.0_3</bundle>
		<bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.jdom/1.1_2</bundle>
    </feature>
    <feature name='tesb-rac-services-sam' version='${project.version}'>
        <feature version='${project.version}'>tesb-rac-common</feature>
        <bundle>mvn:${project.groupId}/crmservice-service/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/crmservice-service-endpoint-sam/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/reservationservice-service/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/reservationservice-service-endpoint-sam/${project.version}</bundle>
    </feature>

  <feature name='tesb-example-sam-osgi' version='${project.version}'>
    <!--  Deploying the config does not yet work in karaf 2.1.3. From 2.2.x on it will work -->
    <config name="org.talend.esb.sam.agent.cfg">
        collector.scheduler.interval=500
        collector.maxEventsPerCall=10

        log.messageContent=true
        log.maxContentLength=-1

        service.url=http://localhost:9080/sam-server-war/services/MonitoringServiceSOAP
        service.retry.number=3
        service.retry.delay=5000
    </config>
    <feature version='${project.version}'>tesb-sam-agent</feature>
    <feature>war</feature>
    <bundle>mvn:org.talend.esb.examples/sam-example-osgi/${project.version}</bundle>
  </feature>

    <feature name='tesb-rac-app' version='${project.version}'>
        <feature version='${project.version}'>tesb-rac-common</feature>
        <bundle>mvn:${project.groupId}/crmservice-client/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/reservationservice-client/${project.version}</bundle>
        <bundle>mvn:${project.groupId}/app-reservation/${project.version}</bundle>
    </feature>
</features>
