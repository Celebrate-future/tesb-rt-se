<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb.examples</groupId>
    <artifactId>features</artifactId>
    <name>Talend ESB Runtime :: Example Features</name>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.talend.esb.examples.rent_a_car</groupId>
        <artifactId>rent-a-car</artifactId>
        <version>4.0</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>filter</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>target/classes/features.xml</file>
                                    <type>xml</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/filtered-resources</directory>
                        <filtering>true</filtering>
                        <includes>
                            <include>**/features.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>locator</id>
            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/filtered-resources/locator</directory>
                        <filtering>true</filtering>
                        <includes>
                            <include>**/features.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>sam</id>
            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/filtered-resources/sam</directory>
                        <filtering>true</filtering>
                        <includes>
                            <include>**/features.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
		        <profile>
            <id>sts</id>
            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/filtered-resources/sts</directory>
                        <filtering>true</filtering>
                        <includes>
                            <include>**/features.xml</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>

</project>
