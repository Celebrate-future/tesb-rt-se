<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb.examples</groupId>
    <artifactId>sam-server-jetty</artifactId>
    <packaging>pom</packaging>

    <parent>
        <groupId>org.talend.esb.examples</groupId>
        <artifactId>sam-examples</artifactId>
        <version>4.0</version>
    </parent>

    <name>Service Activity Monitoring :: Server Jetty</name>
    <url>http://www.talend.com</url>

	<!--dependencies>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty-webapp</artifactId>
            <version>7.2.2.v20101205</version>
        </dependency>
    </dependencies-->
	
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
				<version>8.0.0.M2</version>
				<dependencies>
					<dependency>
						<groupId>org.mortbay.jetty</groupId>
						<artifactId>jetty-webapp</artifactId>
						<version>7.0.0.pre5</version>
					</dependency>
				</dependencies>				
                <configuration>
                    <connectors>
                        <connector
                            implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                            <port>9080</port>
                            <maxIdleTime>60000</maxIdleTime>
                        </connector>
                    </connectors>

					<!--webApp>../sam/sam-server-war/target/sam-server-war.war</webApp-->
					  <contextHandlers>           
						<contextHandler implementation="org.mortbay.jetty.webapp.WebAppContext">
							<war>../sam/sam-server-war/target/sam-server-war.war</war>
							<contextPath>/other</contextPath>
						</contextHandler>
					  </contextHandlers>  
					
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
