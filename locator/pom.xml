    <name>Service Locator Client for CXF</name>
    <version>4.0</version>
    <packaging>bundle</packaging>

    <parent>
        <groupId>org.talend.esb</groupId>
        <artifactId>esb-parent</artifactId>
        <version>4.0</version>
