	<bean id="caseServiceImpl" class="ch.zurich.caseservice.impl.CaseServiceImpl">
		<property name="customerService" ref="customerService" />
		<property name="dummyDelay" value="3000"/>
	</bean>

	<jaxws:endpoint xmlns:tns="http://www.zurich.ch/incurancecase/CaseService"
		id="caseService" implementor="#caseServiceImpl"
		wsdlLocation="WEB-INF/wsdl/CaseService.wsdl" endpointName="tns:CaseServiceSOAP"
		serviceName="tns:CaseService" address="/CaseServiceSOAP">
		<jaxws:features>
			<!-- <bean class="org.apache.cxf.feature.LoggingFeature" /> -->
			<bean id="eventFeature" class="org.sopera.monitoring.feature.EventFeature">
				<constructor-arg ref="eventProducer" />
			</bean>
		</jaxws:features>
	</jaxws:endpoint>
	
	<jaxws:client xmlns:tns="http://customerservice.example.com/"
		id="customerService" address="http://localhost:7080/CustomerService/services/CustomerServicePort"
		wsdlLocation="WEB-INF/wsdl/CustomerService.wsdl"
		serviceClass="com.example.customerservice.CustomerService"
		serviceName="tns:CustomerServiceService" endpointName="tns:CustomerServicePort">
		<jaxws:features>
			<!-- <bean class="org.apache.cxf.feature.LoggingFeature" />-->
			<bean class="org.sopera.monitoring.feature.EventFeature" />
		</jaxws:features>
	</jaxws:client>
</beans>