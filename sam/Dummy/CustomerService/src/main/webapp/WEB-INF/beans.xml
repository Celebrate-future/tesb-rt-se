<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<!-- Uncomment/Comment this line for shareing application context with interceptor. 
		If there is already a Spring context sharing is recommended. -->
	<import resource="classpath:eventProducer.xml" />

	<context:annotation-config />
	<jaxws:endpoint xmlns:tns="http://customerservice.example.com/"
		id="customerService" address="/CustomerServicePort"
		wsdlLocation="WEB-INF/wsdl/CustomerService.wsdl"
		serviceName="tns:CustomerServiceService" endpointName="tns:CustomerServicePort"
		implementor="com.example.customerservice.server.CustomerServiceImpl">
		<jaxws:features>
			<!-- <bean class="org.apache.cxf.feature.LoggingFeature" />-->
			<bean class="org.sopera.monitoring.feature.EventFeature" />
		</jaxws:features>
	</jaxws:endpoint>	
</beans>