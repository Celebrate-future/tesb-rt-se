<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb</groupId>
    <artifactId>sam-server-itest</artifactId>
    <version>4.0</version>
    <packaging>jar</packaging>

    <parent>
        <groupId>org.talend.esb</groupId>
        <artifactId>sam-parent</artifactId>
        <version>4.0</version>
    </parent>

    <name>Service Activity Monitoring :: Server Integration Tests</name>
    <url>http://www.talend.com</url>

    <dependencies>
        <dependency>
            <groupId>org.talend.esb</groupId>
            <artifactId>sam-common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.talend.esb</groupId>
            <artifactId>sam-server</artifactId>
        </dependency>

        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.1.0</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>
</project>
