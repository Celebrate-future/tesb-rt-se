<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	<import resource="classpath:monitoringService.xml" />

	<context:annotation-config />

	<jaxws:endpoint xmlns:tns="http://www.sopera.org/monitoring/MonitoringService/v1"
		id="monitoringservice" implementor="#MonitoringServiceWrapper"
		wsdlLocation="WEB-INF/wsdl/MonitoringService_v1.wsdl" endpointName="tns:MonitoringServiceSOAP"
		serviceName="tns:MonitoringService" address="/MonitoringServiceSOAP">
		<jaxws:features>
			<bean class="org.apache.cxf.feature.LoggingFeature" />
		</jaxws:features>
	</jaxws:endpoint>

	<bean id="MonitoringServiceWrapper"
		class="org.sopera.monitoring.monitoringservice.v1.wrapper.MonitoringServiceWrapper">
		<property name="monitoringService" ref="monitoringService" />
		<property name="mapper" ref="mapper" />
		<property name="targetClassName" value="org.sopera.monitoring.event.Event" />
	</bean>

	<bean id="mapper" class="org.dozer.DozerBeanMapper">
		<property name="mappingFiles">
			<list>
				<value>dozer-global-configuration.xml</value>
				<value>dozer-eventType-event.xml</value>
			</list>
		</property>
	</bean>
</beans>
