<?xml version="1.0"?>
<entity-mappings
	xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/persistence/orm http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd"
	version="2.1">
	
	<entity class="ch.zurich.monitoring.event.ZurichEvent"
		parent-class="org.sopera.monitoring.event.Event">
		<table name="ZURICHEVENTS" />
		<attributes>
			<id name="persistedId" attribute-type="Long">
				<column name="ID" />
				<generated-value strategy="TABLE" generator="EVENT_SEQ" />
				<table-generator name="EVENT_SEQ" table="SEQUENCE"
					pk-column-name="SEQ_NAME" value-column-name="SEQ_COUNT"
					pk-column-value="EVENT_SEQ" allocation-size = "10000" />
				<!-- <generated-value strategy="SEQUENCE" generator="EVENT_SEQ" /> <sequence-generator 
					name="EVENT_SEQ" sequence-name="EVENT_SEQUENCE" allocation-size="1000" /> -->
			</id>
		</attributes>
	</entity>

</entity-mappings>