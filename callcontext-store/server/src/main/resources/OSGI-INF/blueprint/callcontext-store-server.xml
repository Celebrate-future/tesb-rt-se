            <cm:property name="callcontextstore.repo"   value="${tesb.home}/esbrepo/callcontextstore" />
            <cm:property name="callcontextstore.schema" value="/callcontext.avro" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="persistencyManagerBean"
