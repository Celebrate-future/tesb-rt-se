<assembly>

    <id>doc</id>

    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>

        <!-- Copy Examples -->
        <fileSet>
            <directory>${basedir}/../examples</directory>
            <outputDirectory>/examples/tesb</outputDirectory>
            <excludes>
                <!-- Exclude maven build target directory -->
                <exclude>**/target/**</exclude>
                <!-- Exclude Eclipse files and directories -->
                <exclude>**/.settings/**</exclude>
                <exclude>**/.project</exclude>
                <exclude>**/.classpath</exclude>
                <!-- Exclude Intellij IDEA files and directories -->
                <exclude>**/*.i??</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/dependencies/tif-examples/talend-if-${tif.version}/examples</directory>
            <outputDirectory>/examples/tif</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>target/dependencies/tsf-examples/talend-sf-${tsf.version}/examples</directory>
            <outputDirectory>/examples/tsf</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <!-- Copy Docs -->
        <fileSet>
            <directory>target/docs</directory>
            <outputDirectory>/docs</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

    </fileSets>

</assembly>
